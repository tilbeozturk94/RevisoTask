<% include partials/header %>
<div class="container">
    <div class="row">
        <h1 class="centerHeader">Add a New Project</h1>
        <div class="mainDiv">
            <form method="POST", action="/freelancer/<%=freelancer._id%>">
                <div class="form-group">
                    <input class="form-control" type="text" name="project[projectName]" placeholder="Project Name">
                </div>
                <div class="form-group">
                    <input class="form-control" type="text" name="project[image]" placeholder="Project Image">
                </div>
                <div class="form-group">
                    <input class="form-control" type="number" name="project[timeSpent]" placeholder="Time spent" min="0.01" step="0.01">
                </div>
                <div class="form-group">
                    <input class="form-control" type="text" name="project[description]" placeholder="Project Description">
                </div>
                <div class="form-group">
                    <input class="btn btn-lg btn-primary" type="submit">
                </div>
            </form>
         </div>
    </div>
</div>



<%include partials/footer %>